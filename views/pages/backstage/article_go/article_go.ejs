<div class="container page" id="article_go">
    <div class="mg-article-go">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">游记发布管理</div>
        </div>
        <div class="row article-row" v-repeat="article: articles">
            <a data-toggle="modal" data-target="#article_view" v-on="click: viewArticle(article.article_id)" style="font-weight:bolder">{{ article.name }}</a>
            <a style="margin-left: 20px;color: #398439">游记id={{ article.article_id }}</a>
        </div>
    </div>

    <!----------游记预览弹窗----------->
    <div class="modal fade" id="article_view" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" style="width: 1200px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">游记预览</h4>
                </div>
                <div class="modal-body">
                    <iframe v-attr="src:'/article/' + current_article_id" style="width: 100%; height: 400px;"></iframe>
                </div>
                <div class="modal-footer form-inline">
                    <input type="text" class="form-control" placeholder="输入游记所属目的地" v-model="current_article_city">
                    <button type="button" class="btn btn-primary" v-on="click: passArticle()">审核通过</button>
                    <button type="button" class="btn btn-warning" v-on="click: unpassArticle()">审核不通过</button>
                </div>
            </div>
        </div>
    </div>
</div>

