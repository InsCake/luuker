<div class="container page" id="home_editor">
    <!--------------首页语管理--------------->
    <div class="mg-main-txt">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">首页语管理</div>
            <div class="col-md-4"><a class="btn btn-default" v-on="click: goEditingTxt()">修改</a></div>
        </div>
        <div class="row" style="padding-left: 15px; width: 515px;">
            <input class="form-control mid-input" placeholder="首页语" v-model="banner.new_txt">
        </div>
    </div>


    <!--------------首页头图管理--------------->
    <div class="mg-head-img">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">首页头图管理</div>
            <div class="col-md-4"><a class="btn btn-default" data-toggle="modal" data-target="#edit-headimg">修改</a></div>
        </div>
        <div class="row">
            <div class="col-md-6" id="change_img"><img v-attr="src: banner.img_url"></div>
        </div>
    </div>



    <!--------------推荐游记管理--------------->
    <div class="mg-article">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">游记推荐管理</div>
        </div>
        <div class="mg-article-left clearfix">
            <div class="sm-article-item"  v-repeat="article : rec_articles" v-class="big: $index == 0">
                <img v-attr="src: article.img">
            </div>
        </div>
        <div class="mg-article-right">
            <div class="row article-item-row" v-repeat="rec_article: rec_articles">
                <div class="col-md-8 article-item" v-show="current_rec != $index">{{ rec_article.name }}</div>
                <input class="form-control article-input" v-model="new_article.new_id" v-show="current_rec == $index">
                <div class="col-md-2 update-btn"><a class="btn btn-default" data-toggle="modal" v-on="click:showInput($index)" >修改</a></div>
                <div class="col-md-2 sub-btn"><a class="btn btn-default" data-toggle="modal" v-on="click: updateRec(rec_article.rec_id)">提交</a></div>
            </div>
        </div>
    </div>


    <!--------------首页管理弹窗--------------->
    <div class="modal fade" id="edit-headimg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">更改头图</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">&nbsp;</label>
                        <input class="form-control mid-input" placeholder="new image url" v-model="banner.new_img_url">
                        {{ banner.new_img_url }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="go_editImg" v-on="click: goEditimg()">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


