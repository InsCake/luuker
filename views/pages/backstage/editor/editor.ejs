<div class="container page" id="home_editor">

    <!--------------首页头图管理--------------->
    <div class="mg-head-img">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">首页头图管理</div>
            <div class="col-md-4"><a class="btn btn-default" data-toggle="modal" data-target="#edit-headimg">修改</a></div>
        </div>
        <div class="row">
            <div class="col-md-6" id="change_img"><img v-attr="src: banner.img_url"></div>
        </div>
    </div>

    <!--------------推荐游记管理--------------->
    <div class="mg-article">
        <div class="row edit-row">
            <div class="col-md-4 tit-mid">游记推荐管理</div>
        </div>
        <div class="mg-article-left">
            <div class="small-top clearfix">
                <div class="top-left"></div>
                <div class="top-right"></div>
            </div>
            <div class="small-bottom clearfix">
                <div class="bottom-left"></div>
                <div class="bottom-mid"></div>
                <div class="bottom-right"></div>
            </div>

        </div>
        <div class="mg-article-right">
            <div class="row article-item-row">
                <div class="col-md-9" class="article-item">游记题目</div>
                <div class="col-md-2"><a class="btn btn-default" data-toggle="modal" >修改</a></div>
            </div>
            <div class="row article-item-row">
                <div class="col-md-9" class="article-item">游记题目</div>
                <div class="col-md-2"><a class="btn btn-default" data-toggle="modal" >修改</a></div>
            </div>
            <div class="row article-item-row">
                <div class="col-md-9" class="article-item">游记题目</div>
                <div class="col-md-2"><a class="btn btn-default" data-toggle="modal" >修改</a></div>
            </div>
            <div class="row article-item-row">
                <div class="col-md-9" class="article-item">游记题目</div>
                <div class="col-md-2"><a class="btn btn-default" data-toggle="modal" >修改</a></div>
            </div>
            <div class="row article-item-row">
                <div class="col-md-9" class="article-item">游记题目</div>
                <div class="col-md-2"><a class="btn btn-default" data-toggle="modal" >修改</a></div>
            </div>
        </div>

    </div>

    <!--------------首页管理弹窗--------------->
    <div class="modal fade" id="edit-headimg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">更改头图</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">&nbsp;</label>
                        <input class="form-control mid-input" placeholder="new image url" v-model="banner.new_img_url">
                        {{ banner.new_img_url }}
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="go_editImg" v-on="click: goEditimg()">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>


